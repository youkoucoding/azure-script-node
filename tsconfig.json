{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ES7", "ES2018", "ESNext"],

    "module": "commonjs",
    "rootDir": "./",
    "resolveJsonModule": true,

    "allowJs": true,
    "outDir": "build",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
